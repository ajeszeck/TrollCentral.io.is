<h1>Question Show Page</h1>
<div> <!-- Question DIV -->
  <div> <!-- Question Text -->
    <%=  @question.question_text %>
  </div>
  <div class="question-vote">
    <%# FIXME: Fix hard-coded user id when we add sessions! %>
    <%= erb :'partials/_vote',
    locals: {user_id: 0, type: "question", voteable_id: @question.id} %>
  </div>
  <div> <!-- Comment Section -->
    <ul>
      <% @question.comments.each do |comment| %>
        <li><%= comment.comment_text %></li>
      <% end %>
    </ul>
    <form action="/questions/<%= @question.id %>/comments" method="post">
      <label>Add Comment:</label>
      <input type="text" name="comment_text">
      <input type="submit" value="Submit">
    </form>
  </div>
<div id="answer_list">
  <% if @question.answers %>
  <ul>
    <% @question.answers.each do |answer| %>
    <li>
      <%= answer.answer_text %>
    </li>
    <div class="answer_vote">
      <%# FIXME: Fix hard-coded user id when we add sessions! %>
      <%= erb :'partials/_vote',
      locals: {user_id: 1, type: "answer", voteable_id: answer.id} %>
    </div>
    <% end %>
  </ul>
  <% end %>
</div>
<div id="new_question">
  <form action="/questions/<%= @question.id %>/answers" method="post">
    <label for="question_text">Answer Text: </label>
    <textarea name="answer[answer_text]"></textarea>
    <input type="hidden" name="answer[question_id]" value="<%= @question.id %>"/>
    <input type="hidden" name="answer[user_id]" value="0"/>
    <input type="submit" value="Submit" />
  </form>
</div>
